<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>GMS-Model2</display-name>
	<servlet>
		<servlet-name>appServlet</servlet-name> <!-- name 은 참조변수 이고 인스턴스 이다. -->
		<servlet-class>*</servlet-class> <!-- 다형성의 특징 때문에 * 를 찍을 수 있다. -->
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>*.do</url-pattern><!-- .do로 끝나는 웹페이지는 다 appServlet 으로 연결해줘라. -->
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping>
	<filter>
	<filter-name>encodingFilter</filter-name>
	<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter.</filter-class><!--필터 class 톰캣 홈페이지에 존재 org.apache.catalina.filters.SetCharacterEncodingFilter. -->
	<init-param>
	<param-name>encoding</param-name>
	<param-value>UTF-8</param-value>
	</init-param>
	</filter>
	<filter-mapping>
	<filter-name>encodingFilter</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>

	</welcome-file-list>
</web-app>